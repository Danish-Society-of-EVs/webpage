<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Metadata -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>DSEV - {{ title }}</title>

        <!-- Stylesheet -->
        <link rel="stylesheet" href="/style.css" />

        <!-- Alpine js -->
        <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

        <!-- Analytics -->
        <script data-goatcounter="https://new-dsev.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    </head>

    <body class="bg-gray-100 text-gray-900 dark:text-gray-100 dark:bg-background">
        <div class="flex flex-col h-screen justify-between">
            <!-- Navbar -->
            <header class="container mx-auto flex max-w-5xl justify-between">{% include "sections/navbar.njk" %}</header>

            <!-- Content -->
            <main class="flex-grow w-full">
                {{ content | safe }}
            </main>

            <!-- Footer -->
            <footer class="flex flex-col items-center h-auto p-2">{% include "sections/footer.njk" %}</footer>
        </div>
    </body>
</html>

<!-- Scripts -->
<script>
    /* Sets theme based on loalstorage */
    if (localStorage.theme === "dark" || (!"theme" in localStorage && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
        document.querySelector("html").classList.add("dark");
    } else if (localStorage.theme === "dark") {
        document.querySelector("html").classList.add("dark");
    }

    /* Change theme */
    document.getElementById("switchTheme").addEventListener("click", function () {
        let htmlClasses = document.querySelector("html").classList;
        if (localStorage.theme == "dark") {
            htmlClasses.remove("dark");
            localStorage.removeItem("theme");
        } else {
            htmlClasses.add("dark");
            localStorage.theme = "dark";
        }
    });
    document.getElementById("switchTheme_dropdown").addEventListener("click", function () {
        let htmlClasses = document.querySelector("html").classList;
        if (localStorage.theme == "dark") {
            htmlClasses.remove("dark");
            localStorage.removeItem("theme");
        } else {
            htmlClasses.add("dark");
            localStorage.theme = "dark";
        }
    });
</script>
