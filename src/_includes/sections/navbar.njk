<nav class="flex flex-row justify-between mx-auto w-full h-40 p-3 font-montserrat text-md">
    <!-- Logo -->
    <div class="flex flex-row items-center fill-red-500 space-x-3">
        <span>
            <a class="" href="/">
                <!-- Logo -->
                <div class="">
                    <div class="dark:hidden">{% image "logo", "src/images/logo_full-black.png", "DSEV logo", "object-scale-down w-52", "(min-width: 10em) 20vw, 10vw"%}</div>
                    <div class="hidden dark:block">{% image "logo", "src/images/logo_full-white.png", "Portrait image", "object-scale-down w-52", "(min-width: 20em) 50vw, 100vw"%}</div>
                </div>
            </a>
        </span>
    </div>

    <!-- Menu -->
    <!-- Desktop (lg) -->
    <div class="flex flex-row items-end">
        <div class="hidden md:flex">
            <!-- Menu buttons -->
            <div class="md:flex flex-row space-x-0">
                <!-- Home -->
                <a href="/" class="menu-button">Home</a>

                <!-- Rest of pages -->
                {% for name, item in menu %}
                <nav x-data="{ dropdownOpen: false }" class="relative">
                    <!-- Button -->
                    <button class="menu-button" @click="dropdownOpen = !dropdownOpen" class="">
                        <span>{{ name | capatilize }} </span>
                        <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': dropdownOpen, 'rotate-0': !dropdownOpen}" class="inline w-4 h-4 mt-1 ml-1 transition-transform duration-200 transform md:-mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </button>

                    <!-- Dropdown -->
                    <div x-show="dropdownOpen" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="z-50 absolute right-0 md:max-w-screen-sm md:w-screen mt-2 origin-top-right">
                        <div class="px-2 pt-2 pb-4 bg-white rounded-md shadow-xl dark-mode:bg-gray-700 z-50">
                            <div class="grid grid-cols-2 gap-4">
                                {% for post in collections[name] %}
                                <a class="flex row items-start rounded-lg bg-transparent p-2 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline" href="{{ post.url }}">
                                    <!-- Inner menu -->
                                    <div class="flex flex-row">
                                        <div class="w-1/5 mx-auto text-gray-600 pl-1 pr-1">
                                            {% svg post.data.figure, "Portrait", "fill-current stroke-current mx-auto w-12 h-12", "(min-width: 10em) 20vw, 10vw" %}
                                        </div>
                                        <div class="ml-3 w-4/5">
                                            <p class="font-semibold">{{ post.data.title }}</p>
                                            <p class="text-sm">{{ post.data.description }}</p>
                                        </div>
                                    </div>
                                </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </nav>
                {% endfor %}
            </div>

            <!-- Toggle dark mode -->
            <div class="ml-3 flex flex-row space-x-3">
                <p>|</p>

                <button id="switchTheme">
                    <svg class="dark:hidden w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentcolor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" /></svg>
                    <svg class="hidden dark:block w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentcolor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="5" />
                        <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile (md & below) -->
    <div class="block md:hidden">
        <nav x-data="{ dropdownOpen: false }">
            <!-- Button -->
            <button class="block relative p-3 focus:outline-none" @click="dropdownOpen = !dropdownOpen">
                <div class="block w-5 absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2">
                    <span aria-hidden="true" class="block absolute h-0.5 w-5 bg-current transform transition duration-300 ease-in-out" :class="{'rotate-45': dropdownOpen,' -translate-y-1.5': !dropdownOpen }"></span>
                    <span aria-hidden="true" class="block absolute h-0.5 w-5 bg-current transform transition duration-300 ease-in-out" :class="{'opacity-0': dropdownOpen } "></span>
                    <span aria-hidden="true" class="block absolute h-0.5 w-5 bg-current transform transition duration-300 ease-in-out" :class="{'-rotate-45': dropdownOpen, ' translate-y-1.5': !dropdownOpen}"></span>
                </div>
            </button>

            <!-- Dropdown -->
            <div x-show="dropdownOpen" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="transform opacity-0 scale-50" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-3 mt-2 bg-gray-100 dark:bg-gray-100 rounded-md shadow-lg overflow-hidden z-20 w-44">
                <div>
                    <a href="#" class="flex items-center p-3 border-b hover:bg-gray-100 mx-2">
                        <p class="dark:text-gray-700 text-lg items-center">Home</p>
                    </a>
                    {% for name, item in menu %}
                    <a href="#" class="flex items-center p-3 border-b hover:bg-gray-100 mx-2">
                        <p class="dark:text-gray-700 text-lg items-center">
                            {{ name | capatilize }}
                        </p>
                    </a>
                    {% endfor %}
                    <button class="w-full" id="switchTheme_dropdown">
                        <div class="flex flex-row bg-gray-800 justify-between mx-auto my-auto p-4 h-14 text-gray-50">
                            <p class="text-sm">Change theme</p>
                            <svg class="dark:hidden w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentcolor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" /></svg>
                            <svg class="hidden dark:block w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentcolor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="5" />
                                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
                            </svg>
                        </div>
                    </button>
                </div>
            </div>
        </nav>
    </div>
</nav>
