<!-- Banner -->
<div class="relative h-114 sm:h-112 overflow-hidden md:h-80">
    <!-- Logo -->
    <div id="Logo container" class="w-screen h-60 overflow-hidden md:h-56">
        <div class="h-full full-width bg-gray-400 dark:bg-gray-500 curved overflow-hidden">{% background "src/images/EVs.jpg", "Parallaxed background with EVs", "full-width h-full curved bg-no-repeat bg-cover bg-left bg-fixed filter saturate-50 mix-blend-multiply backdrop-filter contrast-75" %}</div>
    </div>

    <!-- Text -->
    <div class="absolute inset-x-0 top-6 align-middle text-center h-10 text-white">
        <div class="flex flex-col space-y-2 font-montserrat">
            <h2 class="text-3xl sm:text-4xl font-medium pl-2 pr-2">Danish Society for Extracellular Vesicles</h2>
            <hr class="border-0 bg-gray-100 text-gray-500 h-0.5 w-16 mx-auto" />

            <p class="text-gray-300 pl-4 pr-4">Supporting Extracellular Vesicle Research and Education across Denmark!</p>
        </div>
    </div>

    <!-- All cards -->
    <div class="absolute inset-x-0 bottom-0 p-2">
        <div class="flex flex-col space-y-4 max-w-2xl text-black md:space-y-0 md:flex-row md:space-x-6 md:justify-between md:mx-auto">
            <!-- Card 1 -->
            <div class="card-1">
                <!-- Logo -->
                <div class="text-red-900 flex fill_current h-16">
                    {{ '/src/images/icons/icon_about.svg' | svgContents("fill-current text-teal-500 block h-12 w-12 block mx-auto my-auto") | safe }}
                </div>

                <!-- Heading -->
                <h2 class="text-xl">About us</h2>
                <p class="text-sm text-gray-600">Learn more about DSEV!</p>
            </div>

            <!-- Card 2 -->
            <div class="card-1 md:h-44">
                <!-- Logo -->
                <div class="text-red-900 flex fill_current h-16">
                    {{ '/src/images/icons/icon_registration.svg' | svgContents("fill-current text-teal-500 block h-12 w-12 block mx-auto my-auto") | safe }}
                </div>

                <!-- Heading -->
                <h2 class="text-xl">Membership</h2>
                <p class="text-sm text-gray-600">How to become a member of DSEV!</p>
            </div>

            <!-- Card 3 -->
            <div class="card-1 border hover:border-gray-500" x-data="{ 'contact': false }" @keydown.escape="contact = false">
                <button type="button" class="" @click="contact = true">
                    <!-- Logo -->
                    <div class="text-red-900 flex fill_current h-16">
                        {{ '/src/images/icons/icon_phone.svg' | svgContents("fill-current text-teal-500 block h-12 w-12 block mx-auto my-auto") | safe }}
                    </div>

                    <!-- Heading -->
                    <h2 class="text-xl">Contact</h2>
                    <p class="text-sm text-gray-600">Find out how to contact us!</p>
                </button>

                <!-- Modal -->
                {% include "src/_includes/modal_contact.njk" %}
            </div>
        </div>
    </div>
</div>
