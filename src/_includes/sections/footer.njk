<!-- Footer -->
<div class="flex flex-row items-center fill-current space-x-2 text-xs">
    <!-- Copyright -->
    <p id="copyright"><!-- Javasrcipt --></p>
    <p>|</p>

    <!-- Mail to -->
    <a class="items-center" href="mailto: {{ metadata.footer.contact }}">
        <div class="flex flex-row space-x-1 items-center fill-current">
            {{ '/src/images/icons/icon_email.svg' | svgContents("fill-current text-teal-500 block h-4 w-4 block mx-auto my-auto") | safe }}

            <p class="">{{ metadata.footer.contact }}</p>
        </div>
    </a>

    <p>|</p>

    <!-- Source code -->
    <a class="items-center" href="{{ metadata.footer.source_url }}" target="_blank">
        <div class="flex flex-row space-x-1 items-center fill-current">
            {{ '/src/images/icons/icon_github.svg' | svgContents("fill-current text-teal-500 block h-3 w-3 block mx-auto my-auto") | safe }}

            <p>{{ metadata.footer.source_text }}</p>
        </div>
    </a>
    <p>|</p>

    <!-- Admin login -->
    <a class="items-center h-4" href="{{ metadata.footer.admin_url }}" target="_blank">
        <div class="flex flex-row space-x-1 items-center fill-current">
            {{ '/src/images/icons/icon_admin.svg' | svgContents("fill-current text-teal-500 block h-full w-4 block mx-auto my-auto") | safe }}

            <p>{{ metadata.footer.admin_text }}</p>
    
        </div>
        </a>
    </div>

<!-- Scripts -->
<script>
    /* Write year to footer*/
    var today = new Date();
    var year = today.getFullYear();
    document.querySelector("#copyright").innerHTML = "&copy; " + year + " - {{ metadata.footer.copyright }}";
</script>
