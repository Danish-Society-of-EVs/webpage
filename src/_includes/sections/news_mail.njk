<!-- News and mailing list signup section -->
<div id="Container" class="max-w-3xl mx-auto overflow-hidden h-full">
    <!-- background -->
    <div class="hidden sm:block absolute bg-gray-200 h-full w-1/2 left-0"></div>
    <div class="hidden sm:block absolute bg-gray-300 h-full w-1/2 right-0"></div>

    <!-- Content -->
    <div class="relative flex flex-col sm:flex-row sm:h-full w-full">
        <!-- Newsfeed -->
        <div class="flex flex-col h-64 sm:w-2/3 sm:h-full bg-gray-200 p-4 pb-0">
            <h3 class="text-2xl font-montserrat dark:text-gray-900">Latest news</h3>
            <div class="flex flex-col space-y-2">
                {% set total_posts = collections.posts | length %} {% set postslist = collections.posts | head(-2) %} {% for post in postslist | reverse %}
                <div class="pl-1 flex flex-col">
                    <a class="text-lg text-blue-400" href="{{ post.url }}">{{ post.data.title }}</a>
                    <time class="text-sm text-gray-600 postlist-date" datetime="{{ post.date | htmlDateString }}">
                        {{ post.date | readableDate }}
                    </time>
                </div>
                {% endfor %}
                <button type="submit" class="h-8 text-sm bg-blue-500 hover:bg-blue-700 text-white font-base font-montserrat rounded-lg w-1/3">
                    <p class="text-center self-center">See {{ totlal_posts | remaining }} more</p>
                </button>
            </div>
        </div>

        <!-- Mailing list -->
        <div class="flex flex-col h-48 sm:w-1/3 sm:h-full bg-gray-300 p-4">
            <h3 class="text-2xl font-montserrat dark:text-gray-900">Mailing list</h3>
            {% include "src/_includes/forms/mailing-list.njk" %}
        </div>
    </div>
</div>
