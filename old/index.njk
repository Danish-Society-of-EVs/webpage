<!-- Article wheel -->
<div class="h-auto overflow-hidden transition-all" x-data="{ expand: false }">
    <!-- Background -->
    {% background "src/images/articles_new.jpg", "Parallaxed background with EVs", "max-w-screen h-full bg-no-repeat bg-cover bg-left bg-fixed" %}

